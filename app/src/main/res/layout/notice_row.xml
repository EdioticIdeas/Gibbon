<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp">


    <TextView
        android:id="@+id/textView_Notice_date"
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="12dp"
        android:text="Oct 24"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_Notice_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView_Notice_date"
        android:layout_alignStart="@+id/textView_Notice_date"
        android:layout_below="@+id/textView_Notice_date"
        android:layout_marginTop="1dp"
        android:text="12:00 A.M."
        android:textSize="12sp" />

    <View
        android:id="@+id/view"
        android:layout_width="2px"
        android:layout_height="40sp"
        android:layout_toEndOf="@+id/textView_Notice_date"
        android:background="@color/colorAccent"
        android:paddingLeft="0px" />

    <TextView
        android:id="@+id/textView_Notice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="20sp"
        android:layout_toEndOf="@+id/view"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Notice Title"
        android:textColor="@color/dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_Notice_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/textView_Notice_title"
        android:layout_below="@+id/textView_Notice_date"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Notice body kgf jnmb jb  j hc n jhvj jhj g  h  hyv nm hvhj "
        android:textSize="12sp" />

</RelativeLayout>
