<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ideotic.edioticideas.gibbon.LoginActivity"
    android:id="@+id/relative_login"
    android:background="#2a363b">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gibbon"
        android:id="@+id/textView_gibbon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:textStyle="normal" />

    <View
        android:layout_width="50sp"
        android:layout_height="2sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView_gibbon"
        android:layout_marginTop="10sp"
        android:background="@android:color/white"
        android:id="@+id/seperator_login" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="User Name"
        android:id="@+id/textView_username"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/editText_username"
        android:layout_alignParentStart="true"
        android:textColor="#2a363b" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_username"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/ic_account_box_white_24dp"
        android:drawablePadding="16sp"
        android:textColor="#ffffff"
        android:hint="User Name"
        android:textColorHint="#e8646060"
        android:backgroundTint="@android:color/white"
        android:paddingBottom="20sp"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Password"
        android:id="@+id/textView_password"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/editText_username"
        android:layout_alignParentStart="true"
        android:textColor="#2a363b" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_password"
        android:layout_below="@+id/textView_password"
        android:layout_marginTop="5sp"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/ic_lock_white_24dp"
        android:drawablePadding="16sp"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:hint="Password"
        android:textColor="#ffffff"
        android:backgroundTint="#ffffff"
        android:textColorHint="#e8646060"
        android:paddingBottom="20sp"
        android:textSize="14sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:id="@+id/button_signIn"
        android:layout_below="@+id/editText_password"
        android:layout_alignStart="@+id/editText_password"
        android:layout_alignEnd="@+id/editText_password"
        android:textColor="#000300"
        android:background="#e84a5f"
        android:layout_marginTop="5sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Sign Up"
        android:id="@+id/textView_signUp"
        android:layout_below="@+id/button_signIn"
        android:layout_alignStart="@+id/button_signIn"
        android:layout_marginTop="20dp"
        android:textColor="#feceab" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Forgot Password?"
        android:id="@+id/textView_fPass"
        android:layout_alignTop="@+id/textView_signUp"
        android:layout_alignEnd="@+id/button_signIn"
        android:textColor="#feceab" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/seperator_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        app:srcCompat="@drawable/ape_login" />

</RelativeLayout>
