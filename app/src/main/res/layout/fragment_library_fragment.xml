<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ideotic.edioticideas.gibbon.library_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55sp"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:background="@color/colorPrimary"
            android:elevation="8dp"
            android:padding="10sp">

            <TextView
                android:id="@+id/textView83"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5sp"
                android:text="Search Book"
                android:textColor="@android:color/darker_gray" />

            <EditText
                android:id="@+id/search_book"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView83"
                android:ems="10"
                android:hint="Enter Book's name here"
                android:inputType="textPersonName"
                android:textColor="#ffffff"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/imageButton_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="#00f9f9f9"
                android:cropToPadding="false"
                android:tint="@color/colorAccent"
                app:srcCompat="@drawable/ic_search_white_48dp" />
        </RelativeLayout>

        <ListView
            android:id="@+id/listView_library"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.13" />

    </LinearLayout>

</FrameLayout>
